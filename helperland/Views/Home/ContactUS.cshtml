
@{
    ViewData["Title"] = "ContactUS";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<!--banner section-->
<section class="banner-section">
    <img src="/assets/group-16_2.png" class="img-fluid" alt="contact-banner">
</section>

<!--about section-->
<section class="about-section">
    <div class="container" style="margin-bottom: 50px;">
        <h1 class="bannner-header">Contact us</h1>
        <img class="rounded mx-auto d-block forma" src="/assets/forma-1-copy-5.png" alt="forma-1-copy-5">
    </div>
    <div class="container" style="margin-bottom: 76px;">
        <div class="row justify-content-center">
            <div class="col col-lg-3">
                <img class="contact-logo" src="/assets/forma-1_2.png" alt="address-logo">
                <p class="contact-info">1111 Lorem ipsum text 100,</p>
                <p class="contact-info">Lorem ipsum AB</p>
            </div>
            <div class="col col-lg-3">
                <img class="contact-logo" src="/assets/phone-call.png" alt="phone-call-logo">
                <p class="contact-info">+49 (40) 123 56 7890</p>
                <p class="contact-info">+49 (40) 987 56 0000</p>
            </div>
            <div class="col col-lg-3">
                <img class="contact-logo" src="/assets/vector-smart-object.png" alt="message-logo " style="padding: 7px 0px;">
                <p class="contact-info">info@helperland.com</p>
            </div>

        </div>
    </div>
    <hr class="line">
    <h2 class="get-in-touch-with-us">Get in touch with us</h2>

    <div class="container">
        <div class="row g-3 justify-content-center">
            <div class="col-lg-3 form-colomn">
                <input type="text" class="form-control" placeholder="First name" aria-label="First name">
            </div>
            <div class="col-lg-3 form-colomn">
                <input type="text" class="form-control" placeholder="Last name" aria-label="Last name">
            </div>
        </div>
        <div class="row g-3 justify-content-center">
            <div class="col-lg-3 form-colomn">
                <div class="input-group">
                    <div class="input-group-text">+49</div>
                    <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="Mobile number">
                </div>
            </div>
            <div class="col-lg-3 form-colomn">
                <div class="input-group">
                    <input type="email" class="form-control" id="floatingInput" placeholder="Email address">

                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 select-msg">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Subject</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 select-msg">
                <div class="mb-3">
                    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Message" rows="3"
                              style="padding-bottom: 115px;"></textarea>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-3">
                <input class="btn btn-primary submit-button" type="submit" value="Submit">
            </div>
        </div>
    </div>
</section>
<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2525.317816682433!2d7.132833!3d50.732594!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47bee13f0afebfb1%3A0x7caeb94f4c1042fc!2sK%C3%B6nigswinterer%20Str.%20116%2C%2053227%20Bonn%2C%20Germany!5e0!3m2!1sen!2sus!4v1639648893776!5m2!1sen!2sus"
        width="100%" height="400px" style="border:0;" allowfullscreen="" loading="lazy">
</iframe>

<section class="our-news-letter" style="margin-top: 47px;">
    <div class="container text-center">

        <h2 class="news-letter">GET OUR NEWSLETTER</h2>
        <div class="form-row d-flex justify-content-center align-items-center">
            <div class="form-group">
                <label for="email" style="display: none;">YOUR EMAIL</label>
                <input type="text" placeholder="YOUR EMAIL" id="email" class="form-control email">
            </div>
            <div class="btn-wrapper">
                <button type="submit" class="red-btn">Submit</button>
            </div>
        </div>
    </div>
</section>

