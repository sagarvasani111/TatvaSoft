<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <link href="~/css/become-a-pro.css" rel="stylesheet" />
</head>
<body>
    <section class="header">
        <div class="header-section d-flex justify-content-between align-items-center">
            <a href="#" title="Helper land" class="logo">
                <img src="/assets/logo-large.png" alt="helperland logo">
            </a>
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link border-btn" href="#" style="color: white;">Book a Cleaner</a>
                        </li>
                        <li class="nav-item navbar-header">
                            <a class="nav-link" asp-action="Prices" asp-controller="Home" style="color: white;">Prices</a>
                        </li>
                        <li class="nav-item navbar-header">
                            <a class="nav-link" href="#" style="color: white;">Our Guarantee</a>
                        </li>
                        <li class="nav-item navbar-header">
                            <a class="nav-link" href="#" style="color: white;">Blog</a>
                        </li>
                        <li class="nav-item navbar-header">
                            <a class="nav-link" asp-action="ContactUS" asp-controller="Home" style="color: white;">Contact Us</a>
                        </li>
                        <li class="nav-item navbar-header">
                            <a class="nav-link border-btn" href="#" style="color: white;">Login</a>
                        </li>
                        <li class="nav-item navbar-header">
                            <a class="nav-link border-btn" asp-action="BecomeAPro" asp-controller="Home" style="color: white;">Become a Helper</a>
                        </li>
                        <li class="nav-item dropdown navbar-header">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false" style="color: white;">
                                <img style="vertical-align: baseline;" src="/assets/ic-flag.png" alt="">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown"
                                style="background-color: white;">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <img src="" alt="India">
                                        <span>India</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <img src="/assets/ic-flag.png" alt="U.K.">
                                        <span>U.K.</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <img src="" alt="U.S.A">
                                        <span>U.S.A.</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>

                </div>

            </nav>
        </div>

        <div class="register-from d-flex justify-content-center mx-auto mt-5">
            <form asp-action="BecomeAPro" asp-controller="Home" method="post">
                <div class="d-flex flex-column mb-3">
                    <h1 class="form-header text-center">Register Now!</h1>
                    <div class="p-2">
                        <input type="text" class="form-control" placeholder="First name" aria-label="First name">
                    </div>
                    <div class="p-2">
                        <input type="text" class="form-control" placeholder="Last name" aria-label="Last name">
                    </div>
                    <div class="p-2">
                        <input type="text" class="form-control" placeholder="Email Address" aria-label="Email Address">
                    </div>
                    <div class="p-2" style="display: inherit;">
                        <div class="input-group-text">+91</div>
                        <input type="tel" class="form-control" placeholder="Phone Number" aria-label="Phone Number">
                    </div>
                    <div class="p-2">
                        <input type="password" class="form-control" id="inputPassword2" placeholder="Password">
                    </div>
                    <div class="p-2">
                        <input type="password" class="form-control" id="inputPassword2" placeholder="Confirm Password">
                    </div>
                    <div class="form-check p-2 ms-4">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Send me newsletters from Helperland
                        </label>
                    </div>
                    <div class="form-check ms-2 mb-3">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            I accept <span class="terms-condition"><a href="#">terms and conditions</a></span> & <span class="terms-condition"><a href="#">privacy policy</a></span>
                        </label>
                    </div>
                    <div class="p-2 mb-3">
                        <img src="/assets/layer-20.png">
                    </div>
                    <div class="get-started-btn">
                        <a class="btn btn-primary" href="#" role="button">Get Started <img src="/assets/shape-2.png"></a>
                    </div>
                </div>
            </form>
        </div>


        <div class="d-flex justify-content-center mt-4 pb-3">
            <a class="down-arrow" href="#">
                <img src="/assets/shape-1.png">
            </a>

        </div>
    </section>
    <div>
        @RenderBody()
    </div>
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a href="#" title="Helper Hand">
                            <img src="/assets/logo-small.png" alt="Helper Hand" style="width: 106px;">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li class="footer-list">
                                <a asp-action="Index" asp-controller="Home" title="Home">HOME</a>
                            </li>
                            <li class="footer-list">
                                <a asp-action="About" asp-controller="Home" title="About">ABOUT</a>
                            </li>
                            <li class="footer-list">
                                <a href="#" title="Testimonials">TESTINOMIALS</a>
                            </li>
                            <li class="footer-list">
                                <a asp-action="FAQ" asp-controller="Home" title="FAQs">FAQs</a>
                            </li>
                            <li class="footer-list">
                                <a href="#" title="Insurance Policy">INSURANCE POLICY</a>
                            </li>
                            <li class="footer-list">
                                <a href="#" title="Impressum">IMPRESSUM</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook" style="padding: 20px;">
                                    <img src="/assets/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="/assets/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

        </div>

        <div class="footer-bottom">
            <div class="container text-center">
                <hr style="color: white;">
                <p>
                    ©2018 Helperland. All rights reserved. <span class="terms-condition">Terms and Conditions | </span><a class="privacy"
                                                                                                                          href="#" title="Privacy Policy">Privacy Policy</a>
                </p>

            </div>
        </div>
    </footer>
</body>
</html>
