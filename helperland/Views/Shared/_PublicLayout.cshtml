@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@model Helperland.viewmodel.RegisterViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <link rel='stylesheet' href="/css/price-css.css">
    <link href="~/css/faq-style.css" rel="stylesheet" />
    <link href="~/css/about-style.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/contact-style.css" rel="stylesheet" />
    <link href="~/css/bookservice.css" rel="stylesheet" />

    <style>
        .dropbtn {
            background-color: #4CAF50;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #3e8e41;
        }
    </style>



</head>
<body>
    <header class="header">
        <div class="header-wrapper d-flex justify-content-center">
            <a href="#" class="me-auto">
                <img src="/assets/logo-small.png" alt="helperland logo">
            </a>
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                       <div class="mx-auto">
                       </div>
                       <ul class="navbar-nav align-items-center">

                           <li class="nav-item">
                               <a class="nav-link border-btn" asp-action="BookService" asp-controller="BookService" title="Book now">Book now</a>
                           </li>
                           <li class="nav-item">
                               <a class="nav-link border-btn" asp-action="Prices" asp-controller="Home" title="Prices & services">Prices & services</a>
                           </li>
                           <li class="nav-item">
                               <a class="nav-link" href="#" title="Warranty">Warranty</a>
                           </li>
                           <li class="nav-item">
                               <a class="nav-link" href="#" title="Blog">Blog</a>
                           </li>
                           <li class="nav-item">
                               <a class="nav-link" asp-action="ContactUs" asp-controller="Home" title="Contact">Contact</a>
                           </li>

                           <li class="nav-item">
                               <a class="nav-link border-btn" asp-action="BecomeAPro" asp-controller="Home" title="Become a Helper">
                                   Become a
                                   Helper
                               </a>
                           </li>
                           @if (HttpContextAccessor.HttpContext.Session.GetString("FirstName") == null)
                           {
                       <li class="nav-item">
                           <a class="nav-link border-btn" href="" type="button" data-bs-target="#staticBackdrop" data-bs-toggle="modal" title="Login">Login</a>
                       </li> }
                                   else
                                   {
                       <li>
                           <div class="vertical_line">
                           </div>
                       </li>
                                       <li class="notification">
                                           <div class="align-items-center justify-content-center" id="notification">
                                               <a href="#"><img src="/assets/icon-notification.png"></a>
                                           </div>
                                       </li>
                                                       <li>
                                                           <div class="vertical_line">
                                                           </div>
                                                       </li>

                                                                       <li class="dropdown">
                                                                           <a class="nav-link" href="#" id="navbarDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                               <img src="/assets/user.png" class="arow">
                                                                               <img src="/assets/sp-arrow-down.png">
                                                                           </a>
                                                                           <div class="dropdown-content">
                                                                               <a class="dropdown-item" asp-action="MySettingTab" asp-controller="Home">My Setting</a>
                                                                               <a class="dropdown-item" asp-action="Logout" asp-controller="Home">Logout</a>

                                                                           </div>
                                                                       </li>
                                   }
                       </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLable" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="logHeader ms-3">Login to your account</h4>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <img src="/assets/close.png">
                    </button>
                </div>
                <form asp-action="Login" asp-controller="Home">
                    <div class="form-log mb-3 mt-3">
                        <input asp-for="Email" type="email" class="login-form form-control" id="pwd" placeholder="Email" name="email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <img src="/assets/user_1.png" class="logImg">
                    </div>
                    <div class="form-log mb-3">
                        <input asp-for="Password" type="password" class="login-form form-control" id="pwd" placeholder="Password" name="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <img src="/assets/lock.png" class="logImg1">
                    </div>
                    <div class="form-log mb-3">
                        <input type="checkbox" value="isRemeberMe" id="rememberMe">
                        <label for="rememberMe">Remember me</label>
                    </div>
                    <div class="form-log mb-3">
                        <button type="submit" class="loginBtn">Login</button>
                    </div>
                </form>
                <div class="text_center mb-1">
                    <a href="#" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#ForgetModal">
                        Forget
                        Password?
                    </a>
                </div>
                <div class="text_center">
                    Don't have an account?<a asp-action="Register" asp-controller="Home" class="ms-1">
                        Create an
                        <br>account
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--ForgotPass modal-->

    <div class="modal fate" id="ForgetModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="ForgetModalLable" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="logHeader ms-4">Forget password</h4>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <img src="/assets/close.png">
                    </button>
                    <form asp-action="ForgetPassword" asp-controller="Home">
                        <div class="form-log mb-3 mt-3">
                            <input asp-for="Email" type="email" class="login-form form-control" id="pwd" placeholder="Email Address"
                                   name="email">
                        </div>
                        <div class="form-log mb-3">
                            <button type="submit" class="loginBtn">Send</button>
                        </div>
                        <div class="text_center">
                            <a asp-action="Login" asp-controller="Home" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                               class="ms-1">Login now</a>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>

    <div>
        @RenderBody()

    </div>
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a href="#" title="Helper Hand">
                            <img src="/assets/logo-small.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li class="footer-list">
                                <a title="Home" asp-action="Index" asp-controller="Home">HOME</a>
                            </li>
                            <li class="footer-list">
                                <a title="About" asp-action="About" asp-controller="Home">ABOUT</a>
                            </li>
                            <li class="footer-list">
                                <a href="#" title="Testimonials">TESTINOMIALS</a>
                            </li>
                            <li class="footer-list">
                                <a title="FAQs" asp-action="FAQ" asp-controller="Home">FAQs</a>
                            </li>
                            <li class="footer-list">
                                <a href="#" title="Insurance Policy">INSURANCE POLICY</a>
                            </li>
                            <li class="footer-list">
                                <a href="#" title="Impressum">IMPRESSUM</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook" style="padding: 20px;">
                                    <img src="/assets/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="/assets/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <div class="footer-bottom">
            <div class="container text_center">
                <p>
                    ©2018 Helperland. All rights reserved. <span class="terms-condition">Terms and Conditions | </span><a class="privacy"
                                                                                                                          href="#" title="Privacy Policy">Privacy Policy</a>
                </p>

            </div>
        </div>
    </footer>
    <script src="/script/index.js"></script>

    @if (IsSectionDefined("Scripts"))
    {

@RenderSection("Scripts", required: true)}

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/script/index.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

</body>
</html>
